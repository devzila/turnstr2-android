<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/followings"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorOrangelite"/>

        <TextView
            android:id="@+id/txt_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/txt_logout"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_5"
            android:textColor="@color/blue"
            android:background="@drawable/storke_blue_rectangle"/>

        <TextView
            android:id="@+id/txt_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/blue"
            android:background="@drawable/storke_blue_rectangle"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:background="@color/colorOrangelite"
        android:id="@+id/layout_toolbar">

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/logo_login"/>

        <RelativeLayout
            android:id="@+id/rl_cube"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorOrangelite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rl_cube"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txt_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/post"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_post_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="0"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_followrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txt_folllower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/followers"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_followr_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="0"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txt_folllowing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/followings"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_following_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="0"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_cube"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/mystory"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>