<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll_user_profile"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_46"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical"
            android:src="@drawable/cube"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ll_user_profile"
            android:layout_toStartOf="@+id/img_three_dot"
            android:paddingVertical="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_5"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/img_three_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/three_dot"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:orientation="horizontal"
            android:background="@android:color/transparent"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5">

        <ImageView
            android:id="@+id/img_heart"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:src="@drawable/heart_gray"/>


        <TextView
            android:id="@+id/txt_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_heart"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="0"
            android:textColor="@color/black" />


        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_like_count"
            android:src="@drawable/message"/>


        <TextView
            android:id="@+id/txt_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_comment"
            android:layout_marginStart="@dimen/dp_5"
            android:text=""
            android:textColor="@color/black" />



        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/txt_comment_count"
            android:src="@drawable/send"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingVertical="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="@string/title_home"
            android:textColor="@color/black" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ColorEBEBEB"/>


</LinearLayout>