<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    tools:context="com.wdp.Fragment.HomeFragment"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/container_cube"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioTabgroup"/>
    <RadioGroup
        android:id="@+id/radioTabgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_5"
        android:background="@drawable/white_rectangle_background"
        android:orientation="horizontal"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/radioHeader1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonrectangleeffect"
            android:button="@null"
            android:gravity="center"
            android:text="@string/library"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:checked="true"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioHeader2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonrectangleeffect"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/photo"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/radioHeader3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonrectangleeffect"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/video"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible"
            android:textStyle="bold" />
    </RadioGroup>
</RelativeLayout>


