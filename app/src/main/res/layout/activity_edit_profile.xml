<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_edit_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_cube"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_250"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_profile_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    android:text="@string/change_profile_photo"
                    android:textColor="@color/colorOrangelite"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_1"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_1"
                            android:contentDescription="@string/app_name"
                            android:background="@drawable/thumnail" />

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_choose" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_1"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_1"
                            android:contentDescription="@string/app_name"
                            android:background="@drawable/thumnail" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_choose"/>
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_1"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_1"
                            android:contentDescription="@string/app_name"
                            android:background="@drawable/thumnail" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_choose"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_1"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_1"
                            android:contentDescription="@string/app_name"
                            android:background="@drawable/thumnail" />

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_choose" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_1"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_1"
                            android:contentDescription="@string/app_name"
                            android:background="@drawable/thumnail" />

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_choose" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginEnd="@dimen/dp_1"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgview6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_1"
                            android:contentDescription="@string/app_name"
                            android:background="@drawable/thumnail" />

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_choose" />
                    </RelativeLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@null"
                    android:drawableStart="@drawable/name"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/first_name"
                    android:padding="@dimen/dp_15"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ColorGray">

                </EditText>


                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@null"
                    android:drawableStart="@drawable/user"
                    android:drawablePadding="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:hint="@string/username"
                    android:textColor="@color/black"
                    android:padding="@dimen/dp_15"
                    android:textColorHint="@color/ColorGray" />

                <RelativeLayout
                    android:id="@+id/rl_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/img_bacground"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/img_choose"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/img_bacground"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="@string/chagne_background_image"
                        android:textColor="@color/colorOrangelite" />

                </RelativeLayout>


                <EditText
                    android:id="@+id/edt_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/web"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/website"
                    android:padding="@dimen/dp_15"
                    android:textColorHint="@color/ColorGray" />


                <EditText
                    android:id="@+id/edt_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/info"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/about_you"
                    android:padding="@dimen/dp_15"
                    android:textColorHint="@color/ColorGray" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@null"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="@string/online"
                        android:textColor="@color/colorOrangelite" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@null"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="@string/contact_me"
                        android:textColor="@color/colorOrangelite" />


                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                    </Spinner>


                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/mail"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/email"
                    android:padding="@dimen/dp_15"
                    android:textColorHint="@color/ColorGray" />

                <EditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/phone_number"
                    android:padding="@dimen/dp_15"
                    android:textColorHint="@color/ColorGray" />


                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@null"
                    android:drawableStart="@drawable/address"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/address"
                    android:padding="@dimen/dp_15"
                    android:textColorHint="@color/ColorGray" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>