<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wdp.Fragment.HomeFragment">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/arrow_back"
            android:padding="@dimen/dp_12"
            app:tint="@color/blue_medium" />

        <TextView
            android:id="@+id/txt_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_5"
            android:textColor="@color/blue"
            android:background="@drawable/storke_blue_rectangle"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:background="@color/colorOrangelite"
        android:id="@+id/layout_toolbar">

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/logo_login"/>

        <RelativeLayout
            android:id="@+id/rl_cube"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rl_cube"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/txt_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/post"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_post_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="0"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_followrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_folllower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/followers"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_followr_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="0"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_folllowing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/followings"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_following_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="0"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_fav"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:padding="@dimen/dp_10"
                android:layout_below="@+id/txt_email">

                <TextView
                    android:id="@+id/txt_fave5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_18"
                    android:text="@string/fave5"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txt_fave5"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layTurntStories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_fav"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/dp_5"
                    android:weightSum="3"
                    android:background="@android:color/white">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:background="@color/blue_medium"/>

                    <TextView
                        android:id="@+id/txtTurntStories"
                        android:layout_width="0dp"
                        android:text="@string/turntstories"
                        android:textColor="@color/blue_medium"
                        android:gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@color/blue_medium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:background="@color/blue_medium">


                    <ImageView
                        android:id="@+id/img_view"
                        android:layout_width="@dimen/dp_100"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent">

                    </ImageView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recylerTurntUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layTurntStories"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/dp_5"
                    android:weightSum="4"
                    android:background="@android:color/white">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:background="@color/blue_medium"/>

                    <TextView
                        android:id="@+id/usernamestories"
                        android:layout_width="0dp"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/blue_medium"
                        android:paddingHorizontal="@dimen/dp_3"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@color/blue_medium"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tab1_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <RelativeLayout
                        android:id="@+id/rl_txt_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt1_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/Profile"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt2_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt1_tab1"
                            android:gravity="center"
                            android:text="@string/When_you_share"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt2_tab1"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/Share_your_first_photo_or_video"
                            android:textColor="@color/colorOrangelite"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>


