<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wdp.Fragment.HomeFragment"
    android:background="@color/white">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back"/>

    <RadioGroup
        android:id="@+id/radioTabgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <RadioButton
            android:id="@+id/radioHeader1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttontab"
            android:button="@null"
            android:gravity="center"
            android:text="@string/followings"
            android:textAllCaps="true"
            android:textColor="@color/colorOrangelite"
            android:textSize="14sp"
            android:checked="true"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioHeader2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttontab"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/followers"
            android:textAllCaps="true"
            android:textColor="@color/ColorGray808080"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_follower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioTabgroup"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_following"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioTabgroup"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</RelativeLayout>


