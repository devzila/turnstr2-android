<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wdp.Fragment.HomeFragment">

    <ImageView
        android:id="@+id/img_profile_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_profile" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />


            <TextView
                android:id="@+id/txt_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:layout_below="@+id/txt_name"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:layout_below="@+id/txt_about"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:id="@+id/rl_fav"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:padding="@dimen/dp_10"
                android:layout_below="@+id/txt_email">

                <TextView
                    android:id="@+id/txt_fave5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_18"
                    android:text="@string/fave5"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txt_fave5"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_fav"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:id="@+id/ll_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_tab1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/grid" />

                        <View
                            android:id="@+id/view_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_tab2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/assignment"
                            app:tint="@color/ColorGray808080" />

                        <View
                            android:id="@+id/view_tab2"
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/ColorGray808080"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_tab1_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <RelativeLayout
                        android:id="@+id/rl_txt_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/txt1_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/Profile"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txt2_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt1_tab1"
                            android:gravity="center"
                            android:text="@string/When_you_share"
                            android:textColor="@color/black" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt2_tab1"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/Share_your_first_photo_or_video"
                            android:textColor="@color/colorOrangelite"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_tab2_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                    <RelativeLayout
                        android:id="@+id/rl_txt_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/txt1_tab2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/Photos_and_Videos_of_you"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txt2_tab2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt1_tab2"
                            android:gravity="center"
                            android:text="@string/When_people_tag_you_in_phones"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>


