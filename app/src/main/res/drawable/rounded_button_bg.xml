<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FB3022" />
            <gradient android:angle="-90" android:startColor="#D61506" android:endColor="#FA1B0B"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FB3022" />
            <solid android:color="#FA1B0B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FA1B0B" />
            <gradient android:angle="-90" android:startColor="#FD483B" android:endColor="#FB3022" />
        </shape>
    </item>
</selector>